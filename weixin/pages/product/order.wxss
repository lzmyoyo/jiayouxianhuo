page{
  background-color: #f2f2f2
}
.product-item, .address-info, .product-price-total{
  padding:15px 15px;
  margin-top: 10px;
  background: #fff;
  border-radius: 0px 0px 10px 10px;
}
 .address-info{
   margin-top: 0px;
 }
  .address-info .info{
    padding:5px 0px;
  }
  .address-info .tag{
    font-size:12px;
  }
  .user-phone .name{
    display: inline-block;
    margin-right: 5px;
  }
  .tag-text{
    display: inline-block;
    background-color: blue;
    color: #fff;
    padding:0px 5px;
    border-radius: 5px;
    margin-right: 5px;
    font-size:11px
  }
  .address-info .user-phone{
    font-size:12px
  }
.product-image image{
  width: 100%;
  float:left
}
.product-info{
  padding-left:8px;
  font-size:12px
}
.product-info .sku{
  font-size:12px;
  color: #ccc;
  padding:3px 0px;
}
.product-info .price{
  color: #d7483a;
  font-size:12px
}
.product-info .price text{
  font-weight: 700;
  font-size: 16px;
  display: inline-block;
  margin-left: 2px
}
.product-info .time{
  font-size:12px;
}
.order-ext{
  margin-top: 10px;
  font-size:12px;
  color: #333;
  background-color: #eeeeee;
  padding:3px;
  padding-left:10px;
  border-radius: 3px
}
.add-num{
  display: inline-block;
  float: right;
  margin-top: -8px
}
.product-price-total{
  font-size: 14px;
}
.product-price-total .price{
  color: #d7483a;
  text-align: right
}
.product-price-total .price text{
  font-weight: 700;
  display: inline-block;
  margin-left:3px
}