page{
  background-color: #f2f2f2
}
.order-status{
  text-align: center;
  font-size:12px;
  padding:12px 0px;
}
.order-status .activity{
  display: inline-block;
  padding: 0px 0px 5px 0px;
  border-bottom: solid #b82619 2px;
}
.all-order{
  padding:0px 10px 10px 10px;
}
.product-item{
  background: #fff;
  padding:10px;
  border-radius: 10px;
  margin-top: 10px;
}
.product-image image{
  width: 100%;
  float:left
}
.product-info{
  padding-left:8px;
  font-size:12px
}
.product-info .sku{
  color:#999;
  font-size: 12px;
  margin-top: 3px;
}
.price-num{
  text-align: right;
  font-size: 12px;
}
.price-num text{
  display: block;
}
.price-num .num{
  color: #999
}
.total-price{
  text-align: right;
  font-size:12px;
}
.total-price .all-price{
  font-size:14px;
  display: inline-block;
  margin-left:2px;
}
.order-action{
  text-align: right;
  margin-top:10px;
}
.order-action .action-item{
  font-size:12px;
  display: inline-block;
  margin-left:8px;
  border:solid #ccc 1rpx;
  border-radius: 8px;
  padding:3px 12px;
}